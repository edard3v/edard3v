---
import LinkOut from "../components/links/LinkOut/LinkOut.astro";
import { TOOLS } from "../components/views/Tools/tools";
import Layout from "../layouts/Layout/Layout.astro";
import { ROUTER } from "./router";
---

<Layout title={ROUTER.herramientas.display}>
  <article class="tools">
    {TOOLS.map((item) => <LinkOut href={item.href}>{item.display}</LinkOut>)}
  </article>
</Layout>

<style>
  .tools {
    padding: var(--lg);
    columns: 4;
    margin-left: auto;
    margin-right: auto;
    border-left: var(--border);
    border-right: var(--border);

    @media (min-width: 320px) and (max-width: 767px) {
      columns: 1;
    }

    @media (min-width: 768px) and (max-width: 1023px) {
      columns: 2;
    }

    @media (min-width: 1024px) and (max-width: 1439px) {
      columns: 3;
    }

    a {
      padding: var(--sm) var(--md);
      border-radius: var(--md);
      display: table;
      color: currentColor;
      outline: var(--border);
      margin-top: var(--md);

      &:hover {
        background-color: var(--primary);
      }
    }
  }
</style>
