<style>
  article {
    height: calc(100dvh - 81px);

    display: grid;
    place-content: center;

    .container {
      display: grid;
      gap: var(--lg);
      justify-items: center;

      h1 {
        font-size: 4.5rem;
        color: var(--primary);
        line-height: 70%;
      }

      h2 {
        text-align: center;
        font-size: 2rem;
      }

      .quote {
        color: var(--green);
        background: linear-gradient(45deg, var(--primary), var(--secondary));
        -webkit-background-clip: text; /* Aplica el gradiente solo al texto */
        -webkit-text-fill-color: transparent; /* Hace transparente el relleno */
      }
    }
  }
</style>
