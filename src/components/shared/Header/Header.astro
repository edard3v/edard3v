---
import { ROUTER } from "../../../pages/router";
import Link from "../../links/Link/Link.astro";
import Logo from "../../logos/Logo/Logo.astro";

const { pathname } = Astro.url;
---

<header>
  <Logo />
  <nav>
    <Link href={ROUTER.index.href}>{ROUTER.index.display}</Link>
    {pathname === "/" && <a href="#projects">proyectos</a>}
    <Link href={ROUTER.herramientas.href}>{ROUTER.herramientas.display}</Link>
  </nav>
</header>

<style>
  header {
    padding: var(--md) var(--xl);
    border-bottom: var(--border);
    min-height: 81px;

    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;

    @media (max-width: 767px) {
      padding: var(--md);
    }

    nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--xl);

      @media (min-width: 320px) and (max-width: 767px) {
        gap: var(--lg);
      }

      a {
        color: inherit;
        text-transform: capitalize;

        &:hover {
          color: var(--accent);
        }
      }
    }
  }
</style>
