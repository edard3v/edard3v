---
import { Image } from "astro:assets";
import logo from "./logo.avif";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: cls, ...rest } = Astro.props;
const isActive = Astro.url.pathname === "/";
---

<a {...rest} href="/" class:list={[cls, { isActive }]}
  ><Image
    src={logo}
    alt="logo edarcode"
    width={150}
    height={150}
    decoding={"auto"}
  /></a
>

<style>
  a {
    border-radius: 25%;
    overflow: hidden;

    width: 120px;
    height: 120px;

    img {
      width: 100%;
      height: 100%;
    }
  }

  .isActive {
  }
</style>
