---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { href, download, class: cls, ...rest } = Astro.props;
---

<a {...rest} download={download} href={href} class:list={[cls]}>
  <slot />
</a>

<style>
  a {
    color: var(--white);
    border-radius: var(--md);
    background-color: var(--secondary);
    cursor: pointer;
    padding: var(--md) var(--xl);
    border: 2px solid black;

    white-space: nowrap; /* Evita que el texto haga varias l√≠neas */
    overflow: hidden; /* Oculta el texto que se desborda */
    text-overflow: ellipsis; /* Muestra los "..." cuando el texto se corta */

    &:hover {
      outline: 2px solid var(--secondary);
    }

    &:active {
      transform: scale(0.95);
    }
  }
</style>
