---
import type { HTMLAttributes } from "astro/types";
import LinkOut from "../../links/LinkOut/LinkOut.astro";
import { NETWORKS } from "./networks";

interface Props extends HTMLAttributes<"article"> {}

const { class: cls } = Astro.props;
---

<article class:list={[cls]}>
  {
    NETWORKS.map(({ url, Icon, display }) => (
      <LinkOut title={display} href={url}>
        {<Icon />}
      </LinkOut>
    ))
  }
</article>

<style>
  article {
    display: flex;
    gap: var(--lg);

    a {
      width: 32px;
      height: 32px;
      transition: transform ease 0.1s;

      &:hover {
        transform: scale(1.5);
      }

      svg {
        max-width: 100%;
        max-height: 100%;
      }
    }
  }
</style>
